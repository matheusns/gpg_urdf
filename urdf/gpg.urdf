<robot name="myrobot">
    <!-- Link descriptions -->

    <material name="blue">
        <color rgba="0 0 0.8 1"/>
    </material>
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="white">
    <color rgba="1 1 1 1"/>
    </material>

  <link name="base_link">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.24 0.10 0.01"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

    <link name="right_wheel_link">
        <visual>
          <origin rpy="1.57075 0 0" xyz="0 -0.05 0"/>
          <geometry>
            <cylinder length="0.025" radius="0.03"/>
          </geometry>
          <material name="black"/>
          <origin rpy="0 0 0" xyz="0 0 0"/>
        </visual>
    </link>

     <link name="left_wheel_link">
    <visual>
      <origin rpy="1.57075 0 0" xyz="0 0.05 0"/>
      <geometry>
        <cylinder length="0.025" radius="0.03"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

   <link name="camera_link">
    <visual>
    <origin rpy="0 0 0" xyz="0.12 0 0.03"/>
      <geometry>
        <box size="0.005 0.04 0.07"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

    <!-- Joint descriptions -->

    <joint name="left_wheel" type="continuous">
	    <parent link="base_link"/>
	    <child link="left_wheel_link"/>     
    </joint>

    <joint name="right_wheel" type="continuous">
    	<parent link="base_link"/>
        <child link="right_wheel_link"/>     
    </joint>

    <joint name="servo" type="fixed">
    	<parent link="base_link"/>
	    <child link="camera_link"/>
    </joint>

</robot>
